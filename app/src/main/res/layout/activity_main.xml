<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.i053113.adapteralbums.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/albums4">





    <ProgressBar
        android:id="@+id/pg_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Cargar   Album    Artistas"
        android:background="@drawable/almbums2"
        android:textColor="@color/colorRojo"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_1_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>
